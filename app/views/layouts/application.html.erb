<!DOCTYPE html>
<html>
  <head>
    <title>CryptoWallet</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    params[:controller], media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag params[:controller], 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div>
      <ul class="nav justify-content-end container-fluid">
        <li>
          <%= link_to '[HOME]', root_path, class:"nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to 'PortuguÃªs', root_path(locale: 'pt-BR'), class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to 'English', root_path(locale: 'en'), class: "nav-link" %>
        </li>
      </ul>
      <div class="container">
        <% flash.each do |message_type, message| %>
          <%= content_tag 'div', class: "alert alert-success alert-dismissible", role: 'alert' do %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <%= message %>
          <% end %>
        <% end %>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
